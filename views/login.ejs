<% var title = 'Login' %>
<% include head %>

<div class="container pt-5">
  <form action="/login" method="post" class="mb-3">
    <div class="form-group row">
      <label for="user-textbox" class="col-sm-2 col-form-label">User:</label>
      <div class="col-sm-6 col-md-4">
        <input type="text" name="username" class="form-control" id="user-textbox">
      </div>
    </div>
    <div class="form-group row">
      <label for="password-textbox" class="col-sm-2 col-form-label">password:</label>
      <div class="col-sm-6 col-md-4">
        <input type="password" name="password" class="form-control" id="password-textbox">
      </div>
    </div>
    <input type="submit" value="Login" class="btn btn-primary">
  </form>
  <%- message %>
</div>


<% include foot %>